@model List<ContactDTO>
@{
    ViewData["Title"] = "GetByContactInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>
                        @Model.Select(x => x.FullName).FirstOrDefault()
                    </h2>
                    <a asp-controller="Contact" asp-action="Create" asp-route-id="@Model.Select(x=> x.PersonId).FirstOrDefault()" class="btn btn-outline-secondary btn-sm">Ekle</a>
                    <div class="form-group row">
                        @*<input type="text" asp-for="FullName" id="name" class="form-control" name="FullName">*@
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Mail Adress</th>
                                    <th>Phone Number</th>
                                    <th>City</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.EMail
                                        </td>
                                        <td>
                                            @item.PhoneNumber
                                        </td>
                                        <td>
                                            @item.CityName
                                        </td>
                                        <td>
                                            <a asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Güncelle</a>
                                            <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-outline-dark btn-sm">Sil</a>
                                            @*<button type="button" class="btn btn-outline-danger btn-sm" onclick="Delete(@item.Id)">Sil</button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

