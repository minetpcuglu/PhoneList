@model ContactDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="col-md-8">
            <div class="card">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3>
                            Kişiye Yeni İletişim Bilgisi Ekle
                        </h3>
                    </div>
                </div>
                <div class="card-body">
                    <form id="form_validation" asp-action="Create" method="POST" novalidate="novalidate">

                        <input class="form-control" id="@Model.PersonId" type="hidden" asp-for="@Model.PersonId" />
                        @*<input class="form-control" id="@Model.PersonId" type="hidden" asp-for="@Model.PersonId">*@

                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label class="form-label">Mail Adres</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" asp-for="EMail" id="name" class="form-control" name="EMail">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label class="form-label">Phone Number</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" asp-for="PhoneNumber" class="form-control" name="PhoneNumber" required="" aria-required="true">
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-2 !important">
                                <label class="form-label">City</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" id="exampleSelectBorder" asp-for="CityId" value="">
                                    @foreach (var item in Model.Cities)
                                    {
                                        <option value="@item.Id" data-selected-value="@item.Id">@item.CityName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>

