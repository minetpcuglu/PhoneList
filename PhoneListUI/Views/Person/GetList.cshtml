@model List<PersonDTO>

@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />

<div class="container-fluid">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h2>
                    Person List
                </h2>
                <a asp-controller="Person" asp-action="Create" class="btn btn-outline-success btn-sm">Ekle</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Full Name</th>
                                <th>Save Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td id="trContact">
                                        <a asp-controller="Contact" asp-action="GetByContactInfo" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">İletişim Bilgisini Göster</a>
                                    </td>
                                    <td>
                                        @item.FirstName @item.LastName
                                    </td>
                                    <td>
                                        @item.FullName
                                    </td>
                                    <td>
                                        <a asp-controller="Person" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Güncelle</a>
                                        @*<a asp-controller="Person" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>*@
                                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="Delete(@item.Id)">Sil</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/PhoneListJavaScript.js"></script>    
}
