@model List<LocationReportDTO>
@{
    ViewData["Title"] = "PersonLocationReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<section class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>
                        Location Report
                    </h2>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>City Name</th>
                                    <th>Country</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>
                                            @item.Location
                                        </td>
                                        <td>
                                            @item.TotalLocation
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



